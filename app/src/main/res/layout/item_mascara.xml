    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewFotoCaboclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fundoverde1aula"/>

    <TextView
        android:id="@+id/textViewNomeCaboclo"
        android:layout_width="wrap_content"
